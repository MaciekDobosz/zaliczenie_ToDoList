@model Zadania
<form method="post" asp-action="DodajZadanie" asp-controller="List">
    <div class="form-group">
        <label for="Tytul">Tytuł Zadania</label>
        <input class="form-control" type="text" placeholder="Wpisz tytuł zadania" asp-for="Tytul" />
    </div>
    <div class="form-group">
        <label for="Opis">Opis Zadania</label>
        <input  class="form-control" type="text" placeholder="Wpisz tytuł zadania" asp-for="Opis" />
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>